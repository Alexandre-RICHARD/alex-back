{
  "name": "alex-back",
  "type": "module",
  "version": "0.0.0",
  "main": "src/index.ts",
  "author": "Alexandre RICHARD",
  "license": "ISC",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "=== Dev ===": "",
    "start": "tsx watch ./src/index.ts",
    "=== Lint & Tests ===": "",
    "global-test": "pnpm check-types && pnpm lint-fix && pnpm unit-test-once",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "unit-test-once": "vitest run  --mode dev",
    "unit-test-watch": "vitest watch --mode dev",
    "unit-test-report": "vitest run --mode dev --reporter=html --coverage.enabled=true && vite preview --outDir report --open",
    "=== Build & Production ===": "",
    "start-prod": "tsx ./src/index.ts",
    "=== Packages ===": "",
    "install-dependencies": "pnpm i",
    "update-dependencies": "pnpm update"
  },
  "dependencies": {
    "@zodios/core": "^10.9.6",
    "@zodios/express": "^10.6.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "mariadb": "^3.4.5",
    "sequelize": "6.37.7",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.3.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vitest": "0.4.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "sequelize-cli": "^6.6.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
